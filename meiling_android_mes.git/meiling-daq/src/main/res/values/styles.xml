<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 超声波焊接机风格属性设置-->
    <style name="weld_static_title">
        <item name="android:textColor">#343434</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">23dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="weld_static_content">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">23dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="weld_dynamic_row">
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:background">#f6f6ee</item>
    </style>
    <style name="weld_dynamic_title">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/list_item_size</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>
    <style name="weld_dynamic_content">
        <item name="android:textColor">#f39700</item>
        <item name="android:background">#313c4f</item>
        <item name="android:textSize">@dimen/list_item_size</item>
        <item name="android:layout_width">200dp</item>
    </style>
    <style name="weld_dynamic_graph_row">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="weld_dynamic_graph_chart">
        <item name="android:layout_height">500dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#f6f6ee</item>
    </style>

    <style name="textview_perfusion_machine">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">40dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="textview_perfusion_machine_content">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 测试数据布局-->
    <style name="oneRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/under_line</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="twoRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/under_line</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="fourRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/under_line</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

</resources>
