<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment3_linerloginfo_textview_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="正在获取停线信息..."
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/fragment3_linerloginfo_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- prelineState：产线原状态
	   code：产线编码
	   notes：停线日志描述
	   operDate：停线开始时间
	   endDatetime：停线结束时间
	   lineState：产线当前状态
	   id：产线日志记录表ID
	   name：产线名称
	   create_uid：
	   user_name：操作员名称
	   user_name：操作员编码-->
        <TextView
            style="@style/textview_query_style1"
            android:text="开始时间" />

        <TextView
            style="@style/textview_query_style1"
            android:text="结束时间" />

        <TextView
            style="@style/textview_query_style1"
            android:text="操作员编码" />

        <TextView
            style="@style/textview_query_style1"
            android:text="操作员名称" />

        <TextView
            style="@style/textview_query_style1"
            android:layout_weight="2"
            android:text="备注" />
    </LinearLayout>

    <ListView
        android:id="@+id/fragment3_lineloginfo_listview"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>