<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.InstructionPdfActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/meiling_logo"
            android:scaleType="fitCenter"/>

        <TextView
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称：" />

        <TextView
            style="@style/postoper_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="合肥美菱股份有限公司"
            android:textSize="30sp" />

        <TextView
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="部门名称：" />

        <TextView
            style="@style/postoper_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="冰箱制造公司"
            android:textSize="30sp" />

        <TextView
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经营体名称：" />

        <TextView
            style="@style/postoper_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M经营体"
            android:textSize="30sp" />
        <!-- 岗位名称-->
        <TextView
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="岗位名称" />

        <TextView
            android:id="@+id/postCode"
            style="@style/postoper_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp" />
        <!-- 岗位指导书名称-->
        <TextView
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/director_name" />

        <TextView
            android:id="@+id/directorNameView"
            style="@style/postoper_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />

        <!-- 适用工厂 -->
        <TextView
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"/>

        <TextView
            android:id="@+id/apply_factory"
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:visibility="gone"/>

        <!-- 产品产线-->
        <TextView
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"/>

        <TextView
            android:id="@+id/productLine"
            style="@style/postoper_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_type"
                style="@style/login_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="岗位指导书"/>

            <Button
                android:id="@+id/btn_query_pdf"
                style="@style/login_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="查询"/>

        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:orientation="horizontal">-->

            <!--<Button-->
                <!--android:id="@+id/btn_local"-->
                <!--style="@style/login_button"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="本地加载"/>-->

        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="冰箱类型"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textSize="25sp"
                android:background="@drawable/textview_border"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="数量"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textSize="25sp"
                android:background="@drawable/textview_border"/>
        </LinearLayout>

        <ListView
            android:id="@+id/yield_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>




    </LinearLayout>

    <WebView
        android:id="@+id/webview1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:visibility="visible"
        />
    <WebView
        android:id="@+id/webview2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:visibility="gone"/>
    <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="5">-->
        <!--<com.github.barteksc.pdfviewer.PDFView-->
            <!--android:id="@+id/pdfView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--/>-->
    <!--</LinearLayout>-->

    <WebView
        android:id="@+id/webview3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:visibility="gone"/>

</LinearLayout>
