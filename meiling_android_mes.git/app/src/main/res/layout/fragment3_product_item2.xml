<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--
        订单号，计划总数量、预装，（总装、在生产数量），（交库，已完成数量），完成率  ，交货时间，交货预警，订单日计划数据-->
   <TextView
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/footer_title_text_color"/>
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:background="@color/footer_title_text_color"/>
       <TextView
           android:id="@+id/fragment3_item2_textview1"
           style="@style/textview_indent_style2"
           android:text="订单号" />
       <TextView
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:background="@color/footer_title_text_color"/>
       <TextView
           android:visibility="gone"
           android:id="@+id/fragment3_item2_textview2"
           style="@style/textview_indent_style2"
           android:text="计划数量" />
       <TextView
           android:layout_width="1dp"
           android:visibility="gone"
           android:layout_height="match_parent"
           android:background="@color/footer_title_text_color"/>
       <TextView
           android:id="@+id/fragment3_item2_textview3"
           style="@style/textview_indent_style2"
           android:text="预装数量" />
       <TextView
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:background="@color/footer_title_text_color"/>
       <TextView
           android:id="@+id/fragment3_item2_textview4"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="24sp"
           android:text="总装数量" />
       <TextView
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:background="@color/footer_title_text_color"/>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/footer_title_text_color"/>
</LinearLayout>