<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_off"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weld_imageveiw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_off"
            android:gravity="left|center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dp"
                android:gravity="left|center_vertical"
                android:text="@string/weld"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <TextClock
                android:id="@+id/weldClock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="right|center_vertical"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 管理数据-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- 设备名称-->
                    <TextView
                        style="@style/weld_static_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:text="@string/device_name"
                        android:textColor="@color/footer_bg" />

                    <TextView
                        android:id="@+id/device_name"
                        style="@style/weld_static_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/foaming_machine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- 岗位-->
                    <TextView
                        style="@style/weld_static_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/post"
                        android:textColor="@color/footer_bg" />

                    <TextView
                        android:id="@+id/post"
                        style="@style/weld_static_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="灌氟封口焊接" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- 前置工序-->
                    <TextView
                        style="@style/weld_static_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pre_step"
                        android:textColor="@color/footer_bg" />

                    <TextView
                        android:id="@+id/pre_step"
                        style="@style/weld_static_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="灌氟" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- 后置工序-->
                    <TextView
                        style="@style/weld_static_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/af_step"
                        android:textColor="@color/footer_bg" />

                    <TextView
                        android:id="@+id/af_step"
                        style="@style/weld_static_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="冷藏风罩安装" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!-- 设置状态-->
                    <TextView
                        style="@style/weld_static_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equip_status"
                        android:textColor="@color/footer_bg" />

                    <TextView
                        android:id="@+id/equip_status"
                        style="@style/weld_static_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@color/green"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:text="运行中"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 检修数据-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">
                <!-- 检修计划-->
                <TextView
                    style="@style/weld_static_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_plan"
                    android:textColor="@color/footer_bg" />

                <TextView
                    android:id="@+id/check_plan"
                    style="@style/weld_static_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/check_plan_value" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">
                <!-- 检修时间-->
                <TextView
                    style="@style/weld_static_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_time"
                    android:textColor="@color/footer_bg" />

                <TextView
                    android:id="@+id/check_time"
                    style="@style/weld_static_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/check_time_value" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">
                <!-- 检修内容-->
                <TextView
                    style="@style/weld_static_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_content"
                    android:textColor="@color/footer_bg" />

                <TextView
                    android:id="@+id/check_content"
                    style="@style/weld_static_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/check_content_value" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/weld_static_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/af_step"
                    android:textColor="@color/footer_bg" />

                <TextView
                    android:id="@+id/fitters"
                    style="@style/weld_static_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="冷藏风罩安装" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/weld_static_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点检信息"
                    android:textColor="@color/footer_bg" />

                <TextView
                    android:id="@+id/show_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/blue_chart"
                    android:gravity="center"
                    android:text="查看点检"
                    android:textColor="@color/white"
                    android:textSize="23dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 工艺数据 -->
    <LinearLayout
        style="@style/weld_dynamic_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/fragment_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/footer_text_color"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <!-- 焊接壁厚-->
                <TextView
                    style="@style/weld_dynamic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:text="@string/weld_thick" />

                <TextView
                    android:id="@+id/weld_thick"
                    style="@style/weld_dynamic_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/footer_text_color"
                    android:textSize="25sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <TextView
                    style="@style/weld_dynamic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:text="@string/thick_unit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/thickDataGraph"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" />

                <ListView
                    android:id="@+id/thickDataList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/footer_text_color"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <!-- 焊接时间-->
                <TextView
                    style="@style/weld_dynamic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:text="@string/weld_time" />

                <TextView
                    android:id="@+id/weld_time"
                    style="@style/weld_dynamic_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="25sp"
                    android:textColor="@color/footer_text_color"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <TextView
                    style="@style/weld_dynamic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:text="@string/time_unit" />
            </LinearLayout>

            <LinearLayout
                style="@style/weld_dynamic_graph_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/timeDataGraph"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" />

                <ListView
                    android:id="@+id/timeDataList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/footer_text_color"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <!-- 焊接能量-->
                <TextView
                    style="@style/weld_dynamic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:text="设备使用率" />

                <TextView
                    android:id="@+id/weld_power"
                    style="@style/weld_dynamic_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    style="@style/weld_dynamic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                style="@style/weld_dynamic_graph_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/timeScaleGraph"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

                <ListView
                    android:id="@+id/timeScaleList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>

            <LinearLayout
                style="@style/weld_dynamic_graph_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/powerDataGraph"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ListView
                    android:id="@+id/powerDataList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
