<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/fragment1_item_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/device"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment1_item_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前状态："
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#000000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/fragment1_item_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="点检信息：合格"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/fragment1_item_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="点检时间：1月23日 13:23"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/fragment1_item_textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="使用率：95%"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/fragment1_item_buttton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="查看详情"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="@color/fragment1_button_color"
                android:background="#ffcc00"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>