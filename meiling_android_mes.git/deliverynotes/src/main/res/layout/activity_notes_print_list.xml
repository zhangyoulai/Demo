<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

          <TextView
              android:id="@+id/plc1_r3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="R3码"
              />
          <TextView
              android:id="@+id/plc1_nm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="订单号"
              />
          <TextView
              android:id="@+id/plc1_xm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="姓名"
              />
          <TextView
              android:id="@+id/plc1_sj"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="手机"
              />
          <TextView
              android:id="@+id/plc1_dz"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:text="地址"
              />
          <TextView
              android:id="@+id/plc1_xh"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="冰箱型号"
              />
          <TextView
              android:id="@+id/plc1_st"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="打印"
              />
      </LinearLayout>

</LinearLayout>
