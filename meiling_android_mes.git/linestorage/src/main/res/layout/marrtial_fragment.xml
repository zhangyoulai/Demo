<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".marrtial_fragment.MarrtialFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/materialid"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <app.android.mingjiang.com.androidbootstrap.BootstrapEditText
                    android:id="@+id/material_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/materialname"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <app.android.mingjiang.com.androidbootstrap.BootstrapEditText
                    android:id="@+id/material_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/area_id"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <app.android.mingjiang.com.androidbootstrap.BootstrapEditText
                    android:id="@+id/area_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/page_size"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <Spinner
                    android:id="@+id/page_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/page_size"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/page_number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <app.android.mingjiang.com.androidbootstrap.BootstrapEditText
                    android:id="@+id/page_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text=" " />

                <app.android.mingjiang.com.androidbootstrap.BootstrapButton
                    android:id="@+id/material_query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000099"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/query"
                    android:textColor="@color/blue"
                    android:textSize="35dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top">

            <TextView
                style="@style/textview_query_style"
                android:text="@string/materialid" />

            <TextView
                style="@style/textview_query_style"
                android:text="@string/materialname" />

            <TextView
                style="@style/textview_query_style"
                android:text="@string/material_safety" />

            <TextView
                style="@style/textview_query_style"
                android:text="@string/safety_stock" />

            <TextView
                style="@style/textview_query_style"
                android:text="@string/lib_number" />

            <TextView
                style="@style/textview_query_style"
                android:text="@string/shortage" />

            <TextView
                style="@style/textview_query_style"
                android:text="@string/expends" />
        </LinearLayout>

        <ListView
            android:id="@+id/around_material_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="卸货清单"
                android:gravity="center"
                android:textSize="30sp" />
            <app.android.mingjiang.com.androidbootstrap.BootstrapButton
                android:id="@+id/receiven_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000099"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="请求卸料"
                android:textColor="@color/blue"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_query_style"
                android:text="物料名称" />

            <TextView
                style="@style/textview_query_style"
                android:text="卸料数量" />

        </LinearLayout>

        <ListView
            android:id="@+id/marrtial_fragment_listview2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <app.android.mingjiang.com.androidbootstrap.BootstrapButton
            android:id="@+id/submit_marrtial_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000099"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="30dp"
            android:text="卸料完成"
            android:textColor="@color/blue"
            android:textSize="35dp" />
    </LinearLayout>

</LinearLayout>
