<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="radio_style">
        <item name="android:layout_width">@dimen/item_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="style01">
        <item name="android:textSize">30sp</item>   //文字大小
        <item name="android:textColor">#000000</item>   //文字颜色
        <item name="android:shadowColor">#fd8d8d</item> //阴影颜色
        <item name="android:shadowRadius">5</item> //阴影大小
        <item name="android:background">@drawable/button_select</item>
    </style>
</resources>
