<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/plane_query_shape"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南京 禄口国际T2"
                    android:padding="2dp"
                    android:id="@+id/airplane_item_start"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:39"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/airplane_item_startTime"/>
            </LinearLayout>
            <TextView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:text="始"
                android:background="@drawable/train_terminal_descrip_shape"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:padding="2dp"
                android:gravity="center"
                android:textSize="12sp"
                android:id="@+id/airplane_item_start_description"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阴"
                    android:textColor="#1eb6b7"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/airplane_start_weather"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fengexian"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云"
                    android:textColor="#1eb6b7"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/airplane_end_weather"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银川 河东机场T3"
                    android:padding="2dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/airplane_item_endstation"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:39"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/airplane_item_endTime"/>
            </LinearLayout>
            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="过"
                android:layout_marginRight="5dp"
                android:background="@drawable/train_terminal_descrip_shape"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:padding="2dp"
                android:textSize="12sp"
                android:gravity="center"
                android:id="@+id/airplane_item_end_description"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cbcbcb"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登机口：11"
                android:textColor="#000000"
                android:id="@+id/airplane_item_djk"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="值机柜台：39-65"
                android:textColor="#000000"
                android:id="@+id/airplane_item_zjgt"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="行李闸口：06"
                android:textColor="#000000"
                android:id="@+id/airplane_item_xlzk"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>